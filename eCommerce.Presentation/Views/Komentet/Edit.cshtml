@model EdumindAkademia.Models.Komentet

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Komentet</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Numri" />
            <div class="form-group">
                <label asp-for="Komenti" class="control-label"></label>
                <input asp-for="Komenti" class="form-control" />
                <span asp-validation-for="Komenti" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Eaprovuar" /> @Html.DisplayNameFor(model => model.Eaprovuar)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="DataKrijimit" class="control-label"></label>
                <input asp-for="DataKrijimit" class="form-control" />
                <span asp-validation-for="DataKrijimit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumriProduktit" class="control-label"></label>
                <select asp-for="NumriProduktit" class="form-control" asp-items="ViewBag.NumriProduktit"></select>
                <span asp-validation-for="NumriProduktit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
