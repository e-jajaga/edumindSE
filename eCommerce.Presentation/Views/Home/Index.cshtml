@model List<Produktet>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    <div class="container">
        <div class="row" style="padding-bottom: 20px;">
            @{
                var i = 0;
                foreach (var item in Model)
                {
                    if (i == 3 || i == 6) 
                    {
                                    @:<div class="row" style="padding-bottom: 20px;">
                    }
        
                                <div class="col-sm-4">
                                    <div class="card">
                                        <div class="card-body">
                                            <h5 class="card-title"><a href="Home/ProductDetails/@item.Numri">@item.Emri</a></h5>
                                            <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                                            <a href="#" class="btn btn-primary" onclick="incrementCart()">+ Shporte</a>
                                        </div>
                                    </div>
                                </div>    
        
                    if (i == 2 || i == 5) 
                    {
                                    @:</div>
                    }
        
                    i++;
                }
            }

        </div>
    </div>
</div>
<div id="weatherForecast">    
</div>
@section Scripts{
<script>
    $(document).ready(function () {
        var container = document.getElementsByClassName("container");
        $("#weatherForecast").load("/Home/GetWeatherForecast");
    });

    function incrementCart() { 
            var shporta = $("#shporta").text();
        if (shporta == "") shporta = 0;
            var shto = parseInt(shporta) + 1;
            $("#shporta").text(shto);
        }
</script> 

}
